{{#each exercises as |exercise|}}
  {{log exercise}}
  <section class='box' data-id="{{exercise.id}}">
    <h4 style="text-transform: capitalize">Exercise:
<small>
      {{#if exercise.exercise}}
        {{exercise.exercise}}
      {{else}}
        No exercise provided.

      {{/if}}
    </small>
    </h4>
      <h6>Date:</h6> <p>
      {{#if exercise.date}}
        {{exercise.date}}
      {{else}}

      {{/if}}
    </p>
    <h6>Muscle group:</h6>
<p>
      {{#if exercise.muscle_group}}
        {{exercise.muscle_group}}
      {{else}}

      {{/if}}
    </p>
    <h6>Description:</h6>
<p>
      {{#if exercise.description}}
        {{exercise.description}}
      {{else}}

      {{/if}}
    </p>
    <h6>Time:</h6>
<p>
      {{#if exercise.time}}
        {{exercise.time}}
      {{else}}

      {{/if}}
    </p>
    <h6>Reps:</h6>
<p>
      {{#if exercise.reps}}
        {{exercise.reps}}
      {{else}}

      {{/if}}
    </p>
    <h6>Weight:</h6>
    <p>
      {{#if exercise.weigth}}
        {{exercise.weight}}
      {{else}}
      {{/if}}
    </p>
<div class="exercise-container">
  <button data-id="{{exercise.id}}" class="btn btn-danger delete">Delete Exercise</button>
  <button type=button data-toggle="modal" data-target="#update-{{exercise.id}}" class="btn btn-info update-modal">Update Exercise</button>
    <div id="update-{{exercise.id}}" class="model fade" tabindex="-1" role="dialog">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header text-center">
            <h4 class="modal-title font-weight-bold" id="updateExerciseTitle">Update Exercise</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>

        </div>
          <div class="modal-body vertical-align-center">
            <form class="update-form" data-id="{{exercise.id}}">
              <input type="text" class="form-control" name="exercise[exercise]" value="{{exercise.exercise}}" required>
              <input type="date" class="form-control" name="exercise[date]" value="{{exercise.date}}" placeholder="date of exercise">
              <input type="text" class="form-control" name="exercise[description]" value="{{exercise.description}}" placeholder="Exercise description">
              <input type="text" class="form-control" name="exercise[muscle_group]" value="{{exercise.muscle_group}}" placeholder="Muscle Group">
              <input type="text" class="form-control" name="exercise[time]" value="{{exercise.time}}" placeholder="Time">
              <input type="integer" class="form-control" name="exercise[reps]" value="{{exercise.reps}}" placeholder="Number of reps">
              <input type="decimal" class="form-control" name="exercise[weight]" value="{{exercise.weigth}}" placeholder="Weight">
              <button type="submit" class="form-control btn btn-info update">Update Exercise</button>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
      </div>
  </section>
{{/each}}
